@model IEnumerable<Eticarett.Models.UrunDetaylari>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    
</head>
<body>
   
    <p>
        @Html.ActionLink("Create New", "New")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.renk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stokSayisi)
            </th>
            <th>
              Resim
            </th>
            <th>
                @Html.DisplayNameFor(model => model.model_cins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Urunler.Acıklama)
            </th>
            <th></th>
        </tr>
        @{ List<string> image = ViewData["image"]as List<string>;
            int a = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.renk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stokSayisi)
            </td>
            <td>            
                <img src="@image.Skip(a).Take(1).FirstOrDefault()" />  
                @{ a++;}                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.model_cins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Urunler.Acıklama)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
    @Html.ActionLink("Geri Dön","List","Homes")
</body>
</html>
