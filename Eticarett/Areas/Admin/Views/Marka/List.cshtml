@model IEnumerable<Eticarett.ViewModels.Marka>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Yeni", "New")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MarkaAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkaAcıklmasi)
        </th>
        <th>
            @Html.DisplayName("Logo")
        </th>
        <th></th>
    </tr>
  
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MarkaAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MarkaAcıklmasi)
        </td>
        <td>
           <img src="@item.imagePath" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
