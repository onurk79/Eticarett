@model IEnumerable<Eticarett.Models.Roller>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kullanıcı")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RolAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    foreach (var i in item.Üye)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => i.Eposta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RolAdi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = i.Id}) |
            @Html.ActionLink("Delete", "Delete", new { id = i.Id })
        </td>
    </tr>
    }
}

</table>
