@model IEnumerable<Eticarett.Models.Kampanya>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    @using (Html.BeginForm(FormMethod.Post))
    {
    <p>
     <a href="@Url.Action("New", "Kampanya")"> New</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IndrimOranı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaslangıcTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BitisTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acıklama)
            </th>
           
            <th></th>
        </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndrimOranı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaslangıcTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BitisTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acıklama)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    
    </table>
    }
</body>
</html>
