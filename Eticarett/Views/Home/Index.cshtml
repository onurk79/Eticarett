@model Eticarett.ViewModels.KampanyalıUrunler
@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Home | E-Ticaret</title>
</head><!--/head-->
<body>
    <h1>@Session["Sepet"]</h1>
    @using (Html.BeginForm())
    {

    <!--/slider-->
        if (Model.Page == 0 || Model.Page == 1)
        {
            <section id="slider">
                <!--slider-->

                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#slider-carousel" data-slide-to="1"></li>
                                    <li data-target="#slider-carousel" data-slide-to="2"></li>
                                </ol>

                                <div class="carousel-inner">
                                    <div class="item active">
                                        <div class="col-sm-6">

                                            <h1>@Model.kampanyalıUrunler.Take(1).SingleOrDefault().UrunAdi</h1>
                                            <h2>@Model.kampanyalıUrunler.Take(1).SingleOrDefault().Fiyat ₺</h2>
                                            <p>------ </p>
                                            <a href="@Url.Action("ShoppingCardAdd","Home",new { id =@Model.kampanyalıUrunler.Take(1).SingleOrDefault().UrunId,urll=HttpContext.Current.Request.Url.AbsolutePath.ToString() })" class="btn btn-default"><i class="glyphicon glyphicon-shopping-cart"></i>Sepete Ekle</a>
                                        </div>
                                        <div class="col-sm-6">
                                            <img src="@Model.kampanyalıUrunler.Take(1).SingleOrDefault().ResimYolu" class="girl img-responsive" alt="" />
                                            @*<img src="images/home/pricing.png" class="pricing" alt="" />*@
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="col-sm-6">
                                            <h1>@Model.kampanyalıUrunler.Skip(1).Take(1).SingleOrDefault().UrunAdi</h1>
                                            <h2>@Model.kampanyalıUrunler.Skip(1).Take(1).SingleOrDefault().Fiyat ₺</h2>
                                            <p>------ </p>
                                            <a href="@Url.Action("ShoppingCardAdd","Home",new { id =@Model.kampanyalıUrunler.Skip(1).Take(1).SingleOrDefault().UrunId,urll=HttpContext.Current.Request.Url.AbsolutePath.ToString() })" class="btn btn-default"><i class="glyphicon glyphicon-shopping-cart"></i>Sepete Ekle</a>
                                        </div>
                                        <div class="col-sm-6">
                                            <img src="@Model.kampanyalıUrunler.Skip(1).Take(1).SingleOrDefault().ResimYolu" class="girl img-responsive" alt="" />
                                            @*<img src="images/home/pricing.png" class="pricing" alt="" />*@
                                        </div>
                                    </div>

                                    <div class="item">
                                        <div class="col-sm-6">
                                            <div class="col-sm-6">
                                                <h1>@Model.kampanyalıUrunler.Skip(2).Take(1).SingleOrDefault().UrunAdi</h1>
                                                <h2>@Model.kampanyalıUrunler.Skip(2).Take(1).SingleOrDefault().Fiyat ₺</h2>
                                                <p>------ </p>
                                                <a href="@Url.Action("ShoppingCardAdd","Home",new { id =@Model.kampanyalıUrunler.Skip(2).Take(1).SingleOrDefault().UrunId,urll=HttpContext.Current.Request.Url.AbsolutePath.ToString() })" class="btn btn-default"><i class="glyphicon glyphicon-shopping-cart"></i>Sepete Ekle</a>
                                            </div>
                                            <div class="col-sm-6">
                                                <img src="@Model.kampanyalıUrunler.Skip(2).Take(1).SingleOrDefault().ResimYolu" class="girl img-responsive" alt="" />
                                                @*<img src="images/home/pricing.png" class="pricing" alt="" />*@
                                            </div>
                                        </div>

                                    </div>

                                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                                        <i class="glyphicon glyphicon-chevron-left"></i>
                                    </a>
                                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                                        <i class="glyphicon glyphicon-chevron-right"></i>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section><!--/slider-->
        }

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="left-sidebar">
                            <h2>Kategori</h2>
                            <div class="panel-group category-products" id="accordian">
                                <!--category-productsr-->
                                @*<div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                <a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
                                                    <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                                    Sportswear
                                                </a>
                                            </h4>
                                        </div>
                                        <div id="sportswear" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <ul>
                                                    <li><a href="#">Nike </a></li>
                                                    <li><a href="#">Under Armour </a></li>
                                                    <li><a href="#">Adidas </a></li>
                                                    <li><a href="#">Puma</a></li>
                                                    <li><a href="#">ASICS </a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>*@

                                @foreach (var kategori in Model.Kategori)
                                {

                                    <div class="panel panel-default">
                                        <div class="panel-heading">

                                            <h4 class="panel-title"><a href="@Url.Action("List", new { id = kategori.Id, markamı = false })">@kategori.KategoriAdi</a></h4>
                                        </div>
                                    </div>
                                }

                            </div><!--/category-products-->

                            <div class="brands_products">
                                <!--brands_products-->
                                <h2>Markalar</h2>


                                @foreach (var Marka in Model.Marka)
                                {
                                    <div class="brands-name">

                                        <ul class="nav nav-pills nav-stacked">
                                            <li><a href="@Url.Action("List", new { id = Marka.Id, markamı = true })"> <span class="pull-right">(count)</span><img src="@Marka.imagePath" alt="" />@Marka.MarkaAdi </a></li>


                                        </ul>
                                    </div>
                                }

                            </div><!--/brands_products-->

                            <div class="price-range">
                                <!--price-range-->
                                <h2>Price Range</h2>
                                <div class="well text-center">
                                    <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                                    <b class="pull-left">0 ₺</b> <b class="pull-right">600 ₺</b>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-9 padding-right">
                        <div class="features_items">
                            <!--features_items-->
                            <h2 class="title text-center">Kampanya</h2>
                            <div>
                                <div class="btn-group pull-left">
                                    @if (Model.kampanyalıUrunler.HasPreviousPage)
                                    {
                                        <a href="@Url.Action("Index", new { page = @Model.kampanyalıUrunler.PreviousPage })" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-chevron-left"></i> Önceki</a>
                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-sm disabled btn-primary"> Önceki</a>
                                    }
                                </div>
                                <div class="btn-group pull-right">
                                    @if (Model.kampanyalıUrunler.HasNextPage)
                                    {
                                        <a href="@Url.Action("Index", new { page = @Model.kampanyalıUrunler.NextPage })" class="btn btn-sm btn-primary"> Sonraki<i class="glyphicon glyphicon-chevron-right"></i></a>
                                    }
                                    else
                                    {
                                        <a href="#" class="btn btn-sm disabled btn-primary"> Sonraki</a>
                                    }
                                </div>
                            </div>

                            <br />
                            <br />
                            <br />
                            <div>
                                @foreach (var i in Model.kampanyalıUrunler)
                                {
                                    <div class="col-sm-4">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">

                                                    <img src="@i.ResimYolu" alt="" />
                                                    <h2>@i.Fiyat ₺</h2>
                                                    <p>@i.UrunAdi</p>

                                                </div>
                                                <div class="product-overlay">

                                                    <div class="overlay-content">
                                                        <a href="@Url.Action("Details", "Home", new { id = @i.UrunId })">
                                                            <h2>Tarih </h2>
                                                            <p>@i.BaslamaTarihi.ToShortDateString()</p>
                                                            <p> @i.BitisTarihi.ToShortDateString()</p>
                                                           <h2> Açıklama</h2>
                                                            <p>@i.Acıklama</p>
                                                        </a>
                                                        <a href="@Url.Action("ShoppingCardAdd","Home",new { id = i.UrunId,urll= HttpContext.Current.Request.Url.PathAndQuery.ToString() })" class="btn btn-default"><i class="glyphicon glyphicon-shopping-cart"></i>Sepete Ekle</a>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="choose">
                                                <ul class="nav nav-pills nav-justified">

                                                    <li> <a href="@Url.Action("CompareListAdd","Home",new {id=i.UrunId, urll = HttpContext.Current.Request.Url.PathAndQuery.ToString() })"><i class="glyphicon glyphicon-transfer"></i>Karşılaştır</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div><!--features_items-->
                    </div>
                    <div class="btn-group col-xs-offset-3">
                        <a href="@Url.Action("List")" class="btn btn-lg btn-primary"><i class="glyphicon glyphicon-circle-arrow-down"></i> Digerlerini Gör</a>

                    </div>
                </div>
            </div>
        </section>

    }
</body>
</html>
